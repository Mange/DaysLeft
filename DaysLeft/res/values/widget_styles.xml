<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <!--
        Standard textSize for TextAppearance.Medium in Android 2.3
        <item name="android:textSize">18sp</item>
        -->
    </style>

    <style name="eventTitle" parent="base">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="eventDate" parent="base">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="daysLeft" parent="base">
        <item name="android:textSize">22sp</item>
    </style>

</resources>